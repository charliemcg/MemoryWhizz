<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/lightCyan"
    tools:context="com.violenthoboenterprises.memorywhizz.MainActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="460dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/splash"
            android:layout_marginTop="80dp"
            android:layout_width="245dp"
            android:layout_height="365dp"
            android:layout_centerHorizontal="true"
            android:background="@color/lightCyan"
            android:clickable="false"/>

        <Button
            android:id="@+id/splashPlay"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@color/cyan"
            android:textColor="@color/black"
            android:layout_marginTop="110dp"
            android:soundEffectsEnabled="true"/>

        <Button
            android:id="@+id/splashHighScores"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:soundEffectsEnabled="true"/>

        <Button
            android:id="@+id/splashMusic"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@color/cyan"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/splash"
            android:layout_marginBottom="35dp"
            android:soundEffectsEnabled="true"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="85dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/highScoreTitle"
            android:background="@drawable/highscores"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewA"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="145dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewB"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="207dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewC"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="269dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewD"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="331dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewE"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="393dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonA"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonB"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonC"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/buttonD"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonE"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonF"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/buttonG"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonH"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonI"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/title"
            android:background="@drawable/titleimage" />

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:elevation="100dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TableRow>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:soundEffectsEnabled="true"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/points"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:soundEffectsEnabled="true"/>
            </TableRow>
        </TableLayout>

</TableLayout>

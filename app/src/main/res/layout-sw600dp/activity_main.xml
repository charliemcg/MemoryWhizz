<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/lightCyan"
    tools:context="com.violenthoboenterprises.memorywhizz.MainActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="720dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/splash"
            android:layout_marginTop="120dp"
            android:layout_width="370dp"
            android:layout_height="585dp"
            android:layout_centerHorizontal="true"
            android:background="@color/lightCyan"
            android:clickable="false"/>

        <Button
            android:id="@+id/splashPlay"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@color/cyan"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="190dp"
            android:soundEffectsEnabled="true"/>

        <Button
            android:id="@+id/splashHighScores"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360dp"
            android:textColor="@color/black"
            android:background="@color/cyan"
            android:textSize="17sp"
            android:soundEffectsEnabled="true"/>

        <Button
            android:id="@+id/splashMusic"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@color/cyan"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_alignBottom="@+id/splash"
            android:layout_marginBottom="70dp"
            android:soundEffectsEnabled="true"/>

        <TextView
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/highScoreTitle"
            android:background="@drawable/highscores"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewA"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="220dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewB"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="310dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewC"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="400dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewD"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="490dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TextView
            android:id="@+id/highScoreTextViewE"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="580dp"
            android:visibility="gone"
            android:elevation="100dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonA"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonB"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonC"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/buttonD"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonE"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonF"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/buttonG"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonH"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
                <Button
                    android:id="@+id/buttonI"
                    android:layout_height="188dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@color/cyan"
                    android:soundEffectsEnabled="true"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/title"
            android:background="@drawable/titleimage" />

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:elevation="100dp"/>

    <RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <TableRow>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="600dp"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:soundEffectsEnabled="true"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/points"
                    android:layout_width="600dp"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:soundEffectsEnabled="true"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</TableLayout>
